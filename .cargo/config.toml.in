[build]
target-dir = "@HUGR_MLIR_CONFIG_TARGET_DIR@"
target = "x86_64-unknown-linux-gnu"
rustflags = "@HUGR_MLIR_CONFIG_RUSTFLAGS@"


# TODO use target system
[target.x86_64-unknown-linux-gnu.MLIR]
rustc-link-search = ["native=$<TARGET_FILE_DIR:HugrMLIR-C>"]
include_dirs = "$<TARGET_PROPERTY:hugr-mlir-headers-interface,INTERFACE_INCLUDE_DIRECTORIES>"
link_libs="dylib=$<TARGET_FILE_BASE_NAME:HugrMLIR-C>"
config_path = "@LLVM_BINARY_DIR@"

[profile.release]
debug = @HUGR_MLIR_CONFIG_PROFILE_RELEASE_DEBUG@
